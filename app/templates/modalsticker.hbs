<div class="overlay" {{action "close"}}> </div>
	<div class="modal-dialog dialog-custom">
		<div class="modal-content">
			<div class="modal-header"><h3 class="flush--top">Sticker!!</h3></div>
			<div class="modal-body">
				<p>Message:</p>
				{{textarea maxlength="130" id="sticker-body" value=title class="form-control" style="height: 150px; resize: vertical;"}}
				<p>Author:</p>
				{{input maxlength="130" id="sticker-author" value=author class="form-control" style="height: 150px; resize: vertical;"}}
			</div>
			<div class="modal-footer">
				<button {{action "save"}} class="btn btn-primary">Save</button>
    			<button {{action "close"}} class="btn btn-default">Close</button>
			</div>
    	</div>
	</div>
</div>